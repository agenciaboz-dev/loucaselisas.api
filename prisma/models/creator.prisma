model Creator {
    id          String          @id
    nickname    String
    language    String
    description String
    active      Boolean         @default(false)

    categories  Category[]
    courses     Course[]


    user_id     String          @unique
    user        User            @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model User {
    id          String          @id

    creator     Creator?
}

model Course {
    id          String          @id
    creator_id  String
    creator     Creator         @relation(fields: [creator_id], references: [id], onDelete: Cascade)
    
}

model Category {
    id          String          @id

    creators    Creator[]
}