model Role {
    id          Int         @id @default(autoincrement())
    name                    String
    permissions_id          Int             @unique
    permissions             Permissions     @relation(fields: [permissions_id], references: [id], onDelete: Cascade)
}

model Permissions {
    id                  Int         @id @default(autoincrement())
    role_id             Int?
    role                Role?
    panelTab            Boolean
    creatorTab          Boolean
    searchTab           Boolean
    favoritesTab        Boolean
    configTab           Boolean
}